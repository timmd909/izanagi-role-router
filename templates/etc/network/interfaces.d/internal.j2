{% if router_internal_nic and router_internal_nic != router_access_point_nic %}
auto {{ router_internal_nic }}
iface {{ router_internal_nic }} inet static
  address {{ internal_ip_octet_1 }}.{{ internal_ip_octet_2 }}.{{ internal_ip_octet_3 }}.{{ internal_ip_octet_4 }}
  netmask 255.255.255.0
  network {{ internal_ip_octet_1 }}.{{ internal_ip_octet_2 }}.{{ internal_ip_octet_3 }}.0
  broadcast {{ internal_ip_octet_1 }}.{{ internal_ip_octet_2 }}.{{ internal_ip_octet_3 }}.255
  dns-nameservers {{ internal_ip_octet_1 }}.{{ internal_ip_octet_2 }}.{{ internal_ip_octet_3 }}.{{ internal_ip_octet_4 }}
  dns-search {{ dns_host }}.{{ dns_domain }}
{% else %}
# Internal NIC disabled or superceded by access point configuration in `wireless` file
{% endif %}
